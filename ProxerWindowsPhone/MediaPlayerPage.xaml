<Page x:Class="Proxer.MediaPlayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:playback="using:Windows.Media.Playback"
      xmlns:playerFramework="using:Microsoft.PlayerFramework"
      xmlns:proxer="using:Proxer"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <playerFramework:MediaPlayer x:Name="MediaPlayerControl" IsZoomVisible="True" IsFullScreenVisible="True"
                                     AutoHide="True" IsFullScreenChanged="MediaPlayerControl_IsFullScreenChanged"
                                     PointerPressed="MediaPlayerControl_PointerPressed" />
        <proxer:BottomToast x:Name="BottomToast"
                            Message="Drücke zurück ein weiteres Mal &#10;um den Media-Player zu verlassen." />
    </Grid>
</Page>